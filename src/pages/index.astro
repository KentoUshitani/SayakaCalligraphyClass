---
import Header from '../components/Header';
import Hero from '../components/Hero';
import Philosophy from '../components/Philosophy';
import Benefits from '../components/Benefits';
import Credentials from '../components/Credentials';
import Voices from '../components/Voices';
import Services from '../components/Services';
import AccessSchedule from '../components/AccessSchedule';
import OnlineLesson from '../components/OnlineLesson';
import Instructor from '../components/Instructor';
import FAQ from '../components/FAQ';
import FloatingLineCTA from '../components/FloatingLineCTA';
import Footer from '../components/Footer';
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>清楓習字教室 - 兵庫県内12教室・指導歴30年</title>
    <meta name="description" content="兵庫県内12教室で展開する清楓（さやか）習字教室。指導歴30年の講師が、生徒一人ひとりの良いものを引き出します。字が整うと、心も整う。" />
    
    <!-- Google Fonts - Noto Serif JP & Noto Sans JP -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@300;400;500;700&family=Noto+Serif+JP:wght@400;600;700;900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <Header client:load />
    <main>
      <Hero client:visible />
      <div id="philosophy">
        <Philosophy client:visible />
      </div>
      <div id="benefits">
        <Benefits client:visible />
      </div>
      <div id="credentials">
        <Credentials client:visible />
      </div>
      <div id="voices">
        <Voices client:visible />
      </div>
      <div id="classes">
        <Services client:visible />
      </div>
      <div id="access">
        <AccessSchedule client:visible />
      </div>
      <div id="online">
        <OnlineLesson client:visible />
      </div>
      <div id="instructor">
        <Instructor client:visible />
      </div>
      <div id="faq">
        <FAQ client:visible />
      </div>
    </main>
    <Footer client:visible />
    <FloatingLineCTA client:load />
  </body>
</html>
